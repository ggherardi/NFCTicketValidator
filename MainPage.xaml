<Page
    x:Class="NFCTicketValidator.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NFCTicketValidator"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}" Height="655" Width="880">

    <Grid>
        <TextBlock HorizontalAlignment="Center" Height="91" Margin="0,22,0,0" Text="{x:Bind Ticket, Mode=OneWay}" TextWrapping="Wrap" VerticalAlignment="Top" Width="825"/>
        <Button x:Name="btnValidateTicket" Content="Validate Ticket" Height="45" Margin="28,128,0,0" VerticalAlignment="Top" Width="233" Click="btnValidateTicket_Click" />
    </Grid>
</Page>
